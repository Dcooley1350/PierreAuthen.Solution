  
@{
    Layout = "_Layout";
}
@model PierreAuthen.Models.Flavor
<div class="card">
    <div class="card-body">
        <h1 class="card-title text-center">Add a New Flavor</h1>
    </div>     
</div>
<div class="card">
    <div class ="card-body">
        @using (Html.BeginForm())
        {
            @Html.LabelFor(model => model.FlavorName)
            @Html.TextBoxFor(model => model.FlavorName, new {@class = "form-control"})
            <br>
            <input type="submit" value="Add Flavor" class="btn button btn-success";>
        }
    </div>
</div>
