<div class="card">
    <div class="card-body">
        <h1 class="card-title text-center">Flavors</h1>
    </div>
        <a href="/Flavor/Create" class = "button btn btn-success">Add Flavor</a>
</div>
<div class="card">
    <div class="card-body">
        <h3 class="card-title">Flavors</h3>
        @if(@Model.Count == 0)
        {
            <h2><i>There are no Flavors in the Database at this time.</i></h2>
        }
        else
        {
           
            @foreach(Flavor flavor in Model)
            {
                <h2>@Html.ActionLink($"{flavor.FlavorName}", "Details","Flavor", new { id = flavor.FlavorId})</h2>              
            }
            
        }
    </div>
</div>