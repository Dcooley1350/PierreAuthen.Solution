@{
    Layout = "_Layout";
}
@model PierreAuthen.Models.Treat;
<div class="card">
    <div class="card-body">
        <h1 class="card-title text-center">Add Treat to @Model.TreatName</h1>
    </div>     
</div>
<div class="card">
    <div class ="card-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.TreatId)
            @Html.HiddenFor(model => model.TreatName)

            @Html.Label("Flavor")
            @Html.DropDownList("FlavorId")
            <br>
            <input type="submit" value="Save" class="btn button btn-info">
        }
    </div>
</div>
