@{
    Layout = "_Layout";
}

@model PierreAuthen.Models.Treat;


<div class="card">
    <div class="card-body">
        <h1 class="card-title text-center"><u>@Model.TreatName</u></h1>
        <h3>TreatId: @Model.TreatId</h3>
        @Html.ActionLink("Update This Treat","Update","Treat", new {id = Model.TreatId}, new { @class = "button btn btn-info"})
        @Html.ActionLink("Add a Flavor to this Treat", "AddTreat", "Treat", new {id = Model.TreatId}, new { @class = "button btn btn-success"})
        @Html.ActionLink("Delete This Treat","Delete","Treat", new {id = Model.TreatId}, new { @class = "button btn btn-warning "})
    </div>     
</div>
<div class="card">
    <div class="card-body">
        <h2 class="card-title text-center"><u>Associated Flavors</u></h1>
        @foreach (TreatFlavor treatflavor in Model.Flavors)
        {
            <h2>By: @Html.ActionLink($"{treatflavor.Flavor.FlavorName}", "Details", "Flavor", new {id = treatflavor.Flavor.FlavorId})</h2>
        }
    </div>     
</div>
